{
    "extends": [
        "airbnb",
        "prettier",
        "plugin:jest/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        // turned off general rules
        "max-len": 0,
        "camelcase": 0,
        "no-console": 0,
        "no-plusplus": 0,
        "import/order": 0,
        "no-return-await": 0,
        "consistent-return": 0,
        "no-param-reassign": 0,
        "object-curly-newline": 0,
        "no-underscore-dangle": 0,
        "import/prefer-default-export": 0,
        // turned off jsx rules
        "jsx-a11y/no-static-element-interactions": 0,
        "jsx-a11y/click-events-have-key-events": 0,
        // rules
        "indent": ["error", 4, {
            "SwitchCase": 1
        }],
        "no-use-before-define": "off",
        "@typescript-eslint/ban-ts-comment": 0,
        "@typescript-eslint/no-empty-interface": 0,
        "@typescript-eslint/no-use-before-define": 0,
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ]
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts"]
            }
        },
        "jest": {
            "version": "latest"
        }
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "globals": {
        "module": true,
        "console": true,
        "require": true,
        "test": true,
        "describe": true,
        "jest": true,
        "beforeEach": true,
        "beforeAll": true,
        "afterAll": true,
        "afterEach": true,
        "expect": true
    },
    "plugins": []
}
